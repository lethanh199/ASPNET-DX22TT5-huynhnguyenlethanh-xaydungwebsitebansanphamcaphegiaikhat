
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@Html.Partial("_Nofit")
<div class="container-91 row my-2 mb-5">
    <div class="col-6">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.524240420392!2d106.67891641446788!3d10.771102162238085!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f219de050cf%3A0xd4f090545fdddadf!2sThe%20Coffee%20House%20-%20Cao%20Th%E1%BA%AFng%20Qu%E1%BA%ADn%203!5e0!3m2!1svi!2s!4v1619454350486!5m2!1svi!2s" width="100%" height="780" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
     </div>
    <div class="col-6">
        <div class="ml-2">
            <h2 class="my-4">Liên hệ</h2>
            <h4 class="my-4">Hãy đến cửa hàng để được phục vụ tận tình và có nhiều lựa chọn đồ uống hơn.</h4>
            <h4 class="my-4">Chân thành cảm ơn!!</h4>
            <div class="my-3">
                <small class="text-secondary">Thời gian làm việc</small>
                <strong class="d-block" style="font-size:14px; color:#252a2b">
                    Tất cả các ngày trong tuần, từ 6h30
                    đến 22h30
                </strong>
            </div>


            <h4 class="my-4">Nếu có vấn đề hoặc sự cố, hãy gửi ý kiến đến chúng tôi!!</h4>

            <style>
                .form-contact input {
                    padding: 20px;
                    color: #333;
                }

                    .form-contact input::placeholder {
                        padding: 0;
                    }

                .form-contact textarea::placeholder {
                    padding: 0;
                }
            </style>

            <!--form-->
            <form class="form-contact" method="POST" action="Site/SubmitContact">

                <div class="form-group mb-4">
                    <input type="text" name="Fullname" class="form-control rounded-0 py-4 bg-light" aria-describedby="emailHelp" placeholder="Tên của bạn" required="" style="">
                </div>
                <div class="row mb-2 p-0">
                    <div class="form-group col-6">
                        <input type="email" name="Email" class="form-control rounded-0 py-4 bg-light" placeholder="Email của bạn" required="">
                    </div>
                    <div class="form-group col-6">
                        <input type="text" name="Phone" class="form-control rounded-0 py-4 bg-light" placeholder="Số điện thoại của bạn" required="" pattern="[0-9]{10,12}">
                    </div>
                </div>
                <div class="form-group mb-4">
                    <input type="text" name="Title" class="form-control rounded-0 py-4 bg-light" placeholder="Tiêu đề" required="">
                </div>
                <div class="form-group">
                    <textarea name="Detail" class="form-control rounded-0 bg-light pl-3" id="" rows="4" placeholder="Nội dung" required=""></textarea>
                </div>

                <button type="submit" class="btn btn-dark rounded-0 py-2 px-4 " style="background-color:#EA8025">
                    <small>
                        GỬI CHO CHÚNG TÔI
                    </small>
                </button>
            </form>
        </div>
    </div>
</div>



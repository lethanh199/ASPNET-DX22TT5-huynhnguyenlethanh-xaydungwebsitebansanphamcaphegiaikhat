@model IEnumerable<WebsiteBanCafe.Models.MCategory>
@{
    ViewBag.Title = "Shop Sách Hoàng Dũng";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div class="home-slider bg-" style="background:#f3f3f3">
    @Html.Action("HomeSlideShow", "Module")
</div>

<div class="promo-so" style="background-color:#A2855D">
    <div class="container-91 h4 text-center font-weight-bold mb-2" style="color:white;">
        ĐỒ UỐNG BÁN CHẠY
    </div>
    <div class="container-91 taiche">
        <div id="owl-wrap" class="owl-carousel owl-theme" style="border-color:#A2855D">

            @foreach (var p in ViewBag.PromotionProduct)
            {
                <div class="p-item" style="border-color:#A2855D">
                    <a href="@p.Slug">
                        <div class="p-img">
                            @if (p.Installment == 1)
                            {
                               
                            }
                            <img src="~/Public/images/products/@p.Image" alt="" class="beau" style="height:295px;margin-top:35px">
                        </div>
                        <div class="couple">
                            @if (p.Discount == 1)
                            {
                               
                            }
                        </div>
                        <div class="p-np" style="margin-top:40px;color:#A2855D;font-weight:bold">
                            @p.Name
                        </div>
                        <div class="p-price">
                            <div class="price">
                                @String.Format("{0:0,0₫}", p.ProPrice)
                            </div>
                            <div class="old-price float-left">
                                @String.Format("{0:0,0₫}", p.Price)
                            </div>
                            <div class="khongbietdattenlagi float-left"> (-@String.Format("{0:0}", ((p.Price - p.ProPrice) / p.Price * 100))%)</div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>


